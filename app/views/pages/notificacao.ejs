<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Notificações</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f3f4f6;
      height: 100vh;
    
    }

    
.botao-de-voltar{
  width: 100%;
  background-color: var(--cor-btn-voltar-section);
  height: 40px;
  display: flex;
  align-items: center;
  
}

.btn-voltar{
  border-radius: 50%;
  border: 1px solid var(--cor-btn-voltar-borda);
  width: 30px;
  height: 30px;
  background-color: var(--cor-btn-voltar);
  color: var(--cor-btn-voltar-seta);
  margin: 0px 0px 0px 60px;
  font-size: 17px;
  align-items: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-voltar:hover {
  background-color: var(--cor-btn-voltar-hover);
  cursor: pointer;
  
}

.lado-botao {
  margin: 0px 10px;
  font-family: "Josefin Sans";
  font-weight: 400;
  font-size: 15px;
  color: var( --cor-btn-voltar-texto);
}


    .container {
      display: flex;
      width: 100%;
      height: 100%;
    }

    .lista-notificacoes {
      width: 300px;
      background-color: #ffffff;
      border-right: 1px solid #ddd;
      overflow-y: auto;
      padding: 20px;
    }

    .notificacao {
      padding: 15px;
      border-bottom: 1px solid #eee;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .notificacao:hover {
      background-color: #f0f4f8;
    }

    .notificacao h4 {
      margin: 0 0 5px;
      font-size: 16px;
    }

    .notificacao small {
      color: gray;
      font-size: 12px;
    }

    .conteudo-mensagem {
      flex-grow: 1;
      padding: 30px;
      background-color: #f9fafb;
    }

    .mensagem-box {
      background-color: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

    .mensagem-box h2 {
      margin-top: 0;
    }

    .mensagem-box time {
      display: block;
      font-size: 0.9em;
      color: #888;
      margin-bottom: 20px;
    }

    .top-bar {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 20px;
    }

    .btn-lida {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    @media (max-width: 768px) {
      .lista-notificacoes {
        display: none;
      }

      .conteudo-mensagem {
        padding: 15px;
      }

      .mensagem-box {
        padding: 15px;
      }
    }
  </style>
</head>
<body>


    

   <% if (tipo_usuario === 'profissional') { %>
  <%- include('../partials/menu-logado', { tipo_usuario: tipo_usuario }) %>
<% } else if (tipo_usuario === 'comum') { %>
  <%- include('../partials/menu-c-c', { tipo_usuario: tipo_usuario }) %>
<% } else { %>
  <%- include('../partials/menu', { tipo_usuario: tipo_usuario }) %>
<% } %>

   <section class="botao-de-voltar">   
    <button class="btn-voltar" onclick="voltarPagina()"> <ion-icon name="arrow-back-outline" id="seta"></ion-icon></button>
    <p class="lado-botao"> Perfil de Jaqueline Maria</p>
</section>

  
  <section class="container">
    <section class="lista-notificacoes">
      <section class="notificacao" onclick="abrirMensagem(0)">
        <h4>Novas publicações</h4>
        <small>03/06/2025 10:00</small>
      </section>
      <section class="notificacao" onclick="abrirMensagem(1)">
        <h4>Melhores Profissionais</h4>
        <small>02/06/2025 15:30</small>
      </section>
      <section class="notificacao" onclick="abrirMensagem(2)">
        <h4>Divulgue sua arte</h4>
        <small>01/06/2025 08:20</small>
      </section>
    </section>

    <section class="conteudo-mensagem">
      <section class="top-bar">
        <button class="btn-lida" onclick="marcarComoLida()">Marcar como lida</button>
      </section>
      <section class="mensagem-box" id="mensagemContent">
        
      </section>
    </section>
  </section>

  <script>
    const mensagens = [
      {
        titulo: "Novas publicações, venha conferir",
        data: "2025-06-03T10:00:00",
        conteudo: "Veja as últimas artes publicadas pelos profissionais!"
      },
      {
        titulo: "Melhores Profissionais",
        data: "2025-06-02T15:30:00",
        conteudo: "Confira o ranking com os artistas mais bem avaliados. Lorem ipsum dolor sit, amet consectetur adipisicing elit. Quibusdam quo minima laudantium illum obcaecati quam harum dolores natus temporibus nihil distinctio officia porro nulla, ab nisi iusto, sit culpa tenetur?"
      },
      {
        titulo: "Divulgue sua arte",
        data: "2025-06-01T08:20:00",
        conteudo: "Aprenda como destacar suas criações na nossa plataforma."
      }
    ];

    function abrirMensagem(index) {
      const msg = mensagens[index];
      document.getElementById("mensagemContent").innerHTML = `
        <h2>${msg.titulo}</h2>
        <time>${new Date(msg.data).toLocaleString()}</time>
        <p>${msg.conteudo}</p>
      `;
    }

    function marcarComoLida() {
      alert("Notificação marcada como lida!");
    }

    // Exibir primeira mensagem ao abrir
    window.onload = () => abrirMensagem(0);
  </script>
</body>
</html>
