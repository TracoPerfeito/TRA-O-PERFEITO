                        <img src="imagens/fotoperfil1.jpeg" class="foto-perfil-con-ant"> 

                        <section class="balao-msg-rec">
                            <p>ok </p>
                        </section>
                    </section>


        
                    </section>
        
                    <section class="area-digitar">
        
                        <input type="text" placeholder="Digite sua mensagem aqui..." />
                        <button type="submit" id="enviar-msg">
                            <ion-icon name="paper-plane-outline" id="icone"></ion-icon>
                        </button>
        
                    </section>
                </section>
            </section>

        </main>

        <%- include('../partials/rodape'); %>


        <script src="js/voltar.js"></script>
        

        <script src="js/chat.js"></script>




    
